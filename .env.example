# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=FreshNutrients AI Chat API
API_VERSION=1.0.0

# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=FNProducts
AZURE_SQL_USERNAME=your-username
AZURE_SQL_PASSWORD=your-password

# OpenAI Configuration (fallback)
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-3.5-turbo

# Azure OpenAI Configuration (preferred)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_MODEL=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# CORS Configuration (for Wix integration)
ALLOWED_ORIGINS=http://localhost:3000,https://your-wix-site.com

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration - Phase 5
API_SECRET_KEY=your-secret-key-here-change-this-in-production
ENABLE_API_AUTH=true
ENABLE_RATE_LIMITING=true
ENABLE_HTTPS_REDIRECT=false

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Request Validation
MAX_MESSAGE_LENGTH=1000
MAX_JSON_SIZE_KB=50
